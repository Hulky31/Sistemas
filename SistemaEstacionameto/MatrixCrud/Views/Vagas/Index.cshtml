@model IEnumerable<EstacionamentoModel>

<div class = "container">


     <div class ="d-flex justify-content-between align-items-center mb-3"> 
          <h1>Estacionamento</h1>
        <a class=" btn btn-success mx-2" asp-controller="Vagas"  asp-action="Cadastrar">Cadastrar Cliente</a>
     </div>
   



<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Proprietario</th>
            <th scope="col">Carro</th>
            <th scope="col">Placa</th>
            <th scope="col">Valor Por Hora</th>
            <th></th>
        </tr>
    </thead>
    <tbody>



        @if (Model != null)
        {

            foreach (var Estacionamento in Model)
            {
                <tr>
                    <th scope="row">@Estacionamento.Proprietario</th>
                    <td>@Estacionamento.Modelo</td>
                    <td>@Estacionamento.placa</td>
                    <td>@Estacionamento.ValolHora</td>
                    <td>
                        <a asp-controller="Vagas" asp-action="Editar" asp-route-Id="@Estacionamento.Id" class="btn btn-warning mx-2"> Editar</a>
                        <a asp-controller="Vagas" asp-action="Excluir" asp-route-Id="@Estacionamento.Id" class="btn btn-danger mx-2" >Excluir</a>
                    </td>
                </tr>
                
            }

        }
        
    </tbody>
</table>

</div>