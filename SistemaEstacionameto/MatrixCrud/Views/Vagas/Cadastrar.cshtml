@model EstacionamentoModel
@{
    ViewData["Title"] = "Cadastrar automovel";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
       <h1 class="text-light">Cadastrar Veiculos</h1>
</div>
     
    
    <form method="post" asp-controller="Vagas" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="Proprietario:" class="form-label text-light">Proprietario</label>
            <input type="text" class="form-control" asp-for="Proprietario" id="Proprietario" placeholder="Proprietario">
            <span class="text-danger" asp-validation-for="Proprietario"></span>
        </div>

        <div class="mb-3">
            <label for="Automovel:" class="form-label text-light">Automovel</label>
            <input type="text" class="form-control" asp-for="Modelo" id="Automovel" placeholder="Modelo do carro">
            <span class="text-danger" asp-validation-for="Modelo"></span>
        </div>

        <div class="mb-3">
            <label for="Placa:" class="form-label text-light">Placa</label>
            <input type="text" class="form-control" asp-for="placa" id="Placa" placeholder="Placa">
            <span class="text-danger" asp-validation-for="placa"></span>
        </div>

        <div class="mb-3">
            <label for="Horas:" class="form-label text-light">Horas</label>
            <input type="text" class="form-control" asp-for="ValolHora" id="Horas" placeholder="Horas">
            <span class="text-danger" asp-validation-for="ValolHora"></span>
        </div>

        <div class="d-flex gap-5 mt-5" >

            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Vagas" asp-action="Index">Voltar</a>

        </div>
       

    </form>

</div>

